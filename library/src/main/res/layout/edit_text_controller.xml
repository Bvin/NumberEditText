<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
       xmlns:tools="http://schemas.android.com/tools"
       android:background="@drawable/gold_border_shape"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/color_gold"
        android:textSize="20sp"
        android:gravity="center"
        android:minWidth="25dp"
        android:background="@drawable/transparent_half_gold_left_selector"
        android:id="@id/zoom_out" />

    <View
        android:background="@color/form_text_color_light_right"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/edit_text"
        tools:text="ï¿¥2345"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:background="@null"
        android:minWidth="100dp"
        android:layout_weight="1" />

    <View
        android:background="@color/form_text_color_light_right"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/color_gold"
        android:textSize="20sp"
        android:gravity="center"
        android:minWidth="25dp"
        android:background="@drawable/transparent_half_gold_right_selector"
        android:id="@id/zoom_in" />

</merge>